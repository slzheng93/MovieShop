@model List<ApplicationCore.Models.MovieCardResponseModel>

@{
    ViewData["Title"] = "Home Page";
}

<h2> 
    Total Movies: @ViewBag.TotalMovies
</h2>

@foreach (var movie in Model)
{
    <div>
        @movie.Id
    </div>
    <div>
        @movie.Title
    </div>
    <div>
        <img src="@movie.PosterUrl" alt="@movie.Title" />
    </div>
}
